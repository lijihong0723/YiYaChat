<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/subscriber_iv_photo"
        android:layout_width="@dimen/subscriber_photo_width"
        android:layout_height="@dimen/subscriber_photo_height"
        android:src="@mipmap/general_default_photo"
        android:layout_margin="@dimen/subscriber_photo_margin"/>

    <TextView
        android:id="@+id/subscriber_tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>

</LinearLayout>