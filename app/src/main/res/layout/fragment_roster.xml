<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/roster_ll_subscribers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true">

        <ImageView
            android:layout_margin="7dp"
            android:id="@+id/roster_iv_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/main_tab_roster_subscriber"/>

        <TextView
            android:layout_toRightOf="@id/roster_iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新的朋友" />

        <TextView
            android:id="@+id/roster_tv_subscriber_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginRight="7dp"
            android:text="1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_notify_point"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_roster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
